{
	"manifest_version" : 2,

	"name" : "RTM Assistant",
	"version" : "0.4",
	"description" : "RTM Assistant helps to add quickly the web-page link in RememberTheMilk.",

	"icons": {"128": "i.png"},

	"browser_action": {
		"default_icon": "i19_.png",
		"default_title": "Add to RTM"
	},

	"background":{
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [
    {
      "matches": ["https://m.rememberthemilk.com/add?name=*"],
      "js": ["popup-control.js"]
    }
  ],

	"permissions" : [
		"tabs",
		"storage",
		"http://*/*",
		"https://*/*"
	]
}
